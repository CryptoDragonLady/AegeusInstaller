}

function mainmenu2 {
#PS3='Please enter your choice: '
#options=("Install full Masternode" "Install CLI Staking Wallet Only" "Quit and get me out of here")
shouldloop=true;
while $shouldloop; do
mainmenu
read -rp "Please select your choice: " opt

    case $opt in
        "1")
            echo "Lets do a masternode!";
	doamasternode
            ;;
        "2")
            echo "Staking Wallet only Please...";
	justwalletplz
            ;;
        "3")
            echo "Returning you to the shell";
	shouldloop=false;
	break
	exit
            ;;
        *) echo "invalid option $REPLY";;
    esac
done
}


function doamasternode() {

clear
purgeOldInstallation
checks
prepare_system
memorycheck
download_node
bootstrap
setup_node

}

function setup_node() {
  get_ip
  create_config
  create_key
  update_config
  enable_firewall
  important_information
  configure_systemd
read -rp "Press any key to continue" pause
}


